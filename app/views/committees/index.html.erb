<div class="page-header">
  <h1><%= Committee.model_name.human :count => 2 %></h1>
</div>

<p class="pull-right">Viser <strong><%= @committees.size %></strong> komiteer.</p>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Navn</th>
      <th>Representanter</th>
    </tr>
  </thead>

  <tbody>
      <% @committees.each do |com| %>
      <tr>
        <td><%= com.id %></td>
        <td><%= link_to com.name, com %></td>
        <td><%= com.representatives.count %></td>
      </tr>
      <% end %>
  </tbody>
</table>
