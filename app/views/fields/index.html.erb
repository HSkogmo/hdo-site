<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= Field.human_attribute_name :name %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <% @fields.each do |field| %>
      <tr>
        <td><%= link_to field.name, field %></td>
        <td>
          <%= link_to t('.new', :default => t("helpers.links.edit")), edit_field_path(field), :class => 'btn' %>
        </td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), field, method: :delete, data: { confirm: Topic.human_attribute_name(:confirm_destroy) }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_field_path, :class => 'btn btn-primary' %>


