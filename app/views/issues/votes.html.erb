<div class="issue-navigation">
  <%= link_to "\u21e6 #{t 'app.issues.back'}", issue %>
</div>

<div class="row-fluid">
  <div class="span12">
    
    <h3><%= Vote.model_name.human(count: 2).capitalize %> <%= Vote.human_attribute_name(:about) %> <%= issue.downcased_title %></h3>

    <ol id="Issues" class="unstyled">
      <% issue.vote_connections.each do |connection| %>
      <li>
        <dl>
          <dt>Beskrivelse</dt>
          <dd><%= connection.description %></dd>
          <dt>Vedtatt</dt>
          <dd>
            <span class="label label-<%= connection.vote.enacted ? 'success' : 'important' %>">
              <%= connection.vote.enacted_text %>
            </span>
            <span class="topic-link">
              <%= link_to connection.vote do %>
                GÃ¥ til avstemming
              <% end %>
            </span>
          </dd>
          <dt>Metode</dt>
          <dd>
            <%= connection.weight %> <i class="icon-info-sign" rel="popover" data-original-title="Om metode" data-content="<p>Vekttall: <%= connection.weight %></p><p>Kommentar: <%= connection.comment %></p>"></i>
          </dd>
        </dl>
        <div class="topic-votes">
          <% if connection.vote.has_results? %>
          <table>
            <% @party_groups.each do |group| %>
              <% group.parties.each do |party| %>
                <%= render partial: 'votes_party', locals: { party: party, stats: connection.vote.stats } %>
              <% end %>
            <% end %>
          </table>
          <% if connection.vote.inferred? %>
            <div class="alert alert-info"><%= I18n.t('app.votes.non_personal.inferred') %></div>
          <% end %>
          <% else %>
            <div class="alert alert-info"><%= I18n.t('app.votes.non_personal.party_unknown') %></div>
          <% end %>
        </div>
      </li>
      <% end %>
    </ol>
  </div>
</div>

<%= content_for :document_ready do %>
  <script>
    $(document).ready(function() {
      $("i[rel=popover]").popover();
    });
  </script>
<% end %>