<ul class="representatives-list">
  <% @representatives.each do |rep| %>
    <li class="vcard representative party-<%= rep.party.external_id %> district-<%= rep.district.name %>">
      <%= link_to(rep) do %>
	<%= image_tag rep.image, class: 'representative-image'  %>
        <span class="n fn"><%= rep.display_name %></span>
        <%if show_district %>
	  <span class="adr district"><%= rep.district.name %></span>
        <% end %>
      <% end %>
      <% if show_party %>
	<%= link_to rep.party.name, rep.party, :class => "org party-" + rep.party.external_id, :title => rep.party.name %>
      <% end %>
    </li>
  <% end %>
</ul>
<script type="text/javascript">
	var HDO = HDO || {};
	HDO.representatives = HDO.representatives || {};

	// TODO: i18n strings
	HDO.representatives.sortByDistrictText = 'Sorter etter fylke';
	HDO.representatives.sortByPartyText = 'Sorter etter parti';
	HDO.representatives.sortAlphabeticallyText = 'Sorter alfabetisk';
</script>
