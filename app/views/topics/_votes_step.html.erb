<h2><%= Vote.model_name.human count: 2 %></h2>
<div class="well">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= Vote.model_name.human %></th>
        <th><%= Proposition.model_name.human count: 2 %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.subject %></td>
        <td>
          <ul>
          <% vote.propositions.each  do |prop| %>
            <li>
              <%= prop.body.html_safe %>
            </li>
          </ul>
          <% end %> 
        </td>
        <td>
          <i class="icon-thumbs-up"></i>
          <strong><%= t 'app.for' %></strong>
          <%= radio_button_tag "votes_for[#{vote.id}]", true, @topic.is_vote_for?(vote.id) -%>
        </td>
        <td>
          <i class="icon-thumbs-down"></i>
          <strong><%= t 'app.against' %></strong>
          <%= radio_button_tag "votes_for[#{vote.id}]", false, @topic.is_vote_against?(vote.id) -%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

