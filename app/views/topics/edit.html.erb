<div class="page-header">
  <h1><%= Topic.human_attribute_name :edit %>: <%= @topic.title %></h1>
</div>

<div class="pagination">
  <ul>
    <% @topic.steps.each do |step| %>
      <li class="<%= 'active' if @topic.current_step?(step) %>">
        <%= link_to Topic.human_attribute_name(step), edit_topic_path(@topic, :step => step)  %>
      </li>
    <% end %>
  </ul>
</div>

<%= render 'form' %>

<%= link_to 'Show', @topic %> |
<%= link_to 'Back', topics_path %>
