<div class="row-fluid issue-navigation">
  <%= link_to "\u21e6 #{@previous_topic.name}", @previous_topic if @previous_topic %>
  <%= link_to "#{@next_topic.name} \u21e8", @next_topic, class: "pull-right" if @next_topic %>
</div>

<% if @issues.empty? %>

  <div class="page-header">
    <h2>Ingen saker relatert til <%= @topic.downcased_name %> enda. Vi jobber med saken!</h2>
  </div>

<% else %>

  <div class="page-header">
    <h1>Saker relatert til <%= @topic.downcased_name %></h1>
  </div>

  <div class="row-fluid">
    <ul class="unstyled">
      <% @issues.each do |issue| %>
        <li>
          <h3><%= link_to issue.title, issue %></h3>
        </li>
      <% end %>
    </ul>
  </div>

<% end %>

<% if @other_issues.any? %>
  <div class="page-header">
    <h2>Andre saker</h2>
  </div>

  <div class="row-fluid">
    <ul class="unstyled">
      <% @other_issues.each do |issue| %>
        <li>
          <h3><%= link_to issue.title, issue %></h3>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
