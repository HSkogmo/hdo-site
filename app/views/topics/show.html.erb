<% if user_signed_in? %>
  <div class="alert alert-warning">
    <% if @topic.published? %>
      <%= t('app.topics.published') %>
    <% else %>
      <%= t('app.topics.not_published') %>
    <% end %>
    <%= link_to t('app.edit'), edit_topic_path(@topic), class: 'btn' %>
  </div>
<% end %>

<div class="row-fluid topic-navigation">
  <%= link_to "\u21e6 #{@previous_topic.title}", @previous_topic if @previous_topic %>
  <%= link_to "#{@next_topic.title} \u21e8", @next_topic, class: "pull-right" if @next_topic %>
</div>

<div class="well">
  <h1><%= @topic.title %></h1>
  <p><%= @topic.description %></p>
</div>

<div class="alert alert-info">
  <%= t('app.votes.explanation', title: @topic.downcased_title) %>
  <%= link_to "Les mer om metoden", home_method_path %>.
</div>

<div class="row-fluid">
    <div class="pull-right"><%= link_to "Se relaterte avstemninger \u21e8", topic_votes_path(@topic) %></div>
</div>

<% @party_groups.each do |party_group| %>
  <div class="row-fluid">
    <div><strong><%= party_group.name %></strong></div>
  </div>

  <%= render partial: 'party_group', locals: { group: party_group, topic: @topic, promises_by_party: @promises_by_party } %>
  <hr>
<% end %>

